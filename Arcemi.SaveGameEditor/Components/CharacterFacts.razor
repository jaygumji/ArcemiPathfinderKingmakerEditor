<AccordionContainer>
    <Accordion HeaderText="Features">
        <CharacterFeatures Unit="Unit"/>
    </Accordion>
    <Accordion HeaderText="Abilities">
        <CharacterAbilities Unit="Unit"/>
    </Accordion>
    <Accordion HeaderText="Buffs">
        <CharacterBuffs Unit="Unit"/>
    </Accordion>
    @foreach (var sect in Unit.FactSections) {
        <Accordion HeaderText="@sect.Name">
            <CharacterFactSection Section="sect" />
        </Accordion>
    }
</AccordionContainer>


@code {
    [Parameter]
    public IGameUnitModel Unit { get; set; }
}