<AccordionContainer>
    <Accordion HeaderText="Features">
        <CharacterFeatures Unit="Unit"/>
    </Accordion>
    <Accordion HeaderText="Abilities">
        <CharacterAbilities Unit="Unit"/>
    </Accordion>
    <Accordion HeaderText="Buffs">
        <CharacterBuffs Buffs="Unit.Buffs"/>
    </Accordion>
    @if (Unit.UniqueBuffs.Count > 0) {
        <Accordion HeaderText="Unique Buffs">
            <CharacterBuffs Buffs="Unit.UniqueBuffs" />
        </Accordion>
    }
</AccordionContainer>


@code {
    [Parameter]
    public IGameUnitModel Unit { get; set; }
}